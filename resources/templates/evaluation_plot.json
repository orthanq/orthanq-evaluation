{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "datasets": {
    "tool_accuracies": []
  },
  "data": {"name": "tool_accuracies"},
  "transform": [{"calculate": "split(datum.value, ' ')" ,"as": "percent"},
  {"calculate": "split(datum.value, ' ')[1]" ,"as": "fraction"}],
  "layer": [
    {"mark": "bar"},
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 0,
        "dy": -14,
        "fontSize": 7,
        "tooltip": true
      },
      "encoding": {
        "text": {"field": "percent"}
      }
    }
  ],
  "encoding": {
    "x": {"field": "category", "axis": {"title": "Locus"}},
    "y": {
      "field": "percent[0]",
      "type": "quantitative",
      "axis": {"title": "Accuracy"}
    },
    "xOffset": {"field": "group"},
    "color": {"field": "group"}
  },
  "config": {}
}